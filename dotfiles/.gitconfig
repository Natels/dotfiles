[alias]
	release-diff = !sh -c 'git diff "$(git describe --abbrev=0)~1.."'
	release-log = !sh -c 'git -P log "$(git describe --abbrev=0)~1.."'
[color]
	ui = auto
[commit]
	cleanup = scissors
	gpgsign = true
[core]
	autocrlf = input
	editor = code --wait
	excludesfile = ~/.gitignore-global
[credential]
	helper = cache --timeout=43200 # 12 hours
[diff]
	renameLimit = 2000
	renames = true
	tool = vscode
[difftool]
	prompt = false
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[fetch]
	prune = true
[format]
	pretty = %C(dim)%ci%C(reset) %C(dim)%p%C(reset) %C(cyan dim)%h%C(reset)%C(cyan)%d%C(reset) %C(yellow)|%C(reset) %s %C(dim)by %an %ar.%C(reset)
[github]
	user = ezzatron
[include]
	path = ~/.gitconfig.local
[init]
	defaultBranch = main
[merge]
	ff = only
[pull]
	ff = only
[push]
	default = current
	followTags = true
[stash]
	showPatch = true
[tag]
	gpgsign = true
	sort = version:refname
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
